{
  "manifest_version": 3,
  "name": "Hermes â€“ LinkedIn Message Importer",
  "version": "0.1.1",
  "description": "Hermes importa e analizza i messaggi LinkedIn direttamente dalla sidebar.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Hermes",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
"permissions": [
  "clipboardWrite",
  "storage"
],
  "host_permissions": [
   "https://www.linkedin.com/messaging/*",
   "http://localhost:8080/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/messaging/*"],
      "js": ["content-script.js"]
    }
  ]
}
