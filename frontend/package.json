{
  "name": "linkedin-addon-frontend",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",

  "scripts": {
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron . --dev",
    "start": "electron .",

    "build": "vite build",
    "build:app": "npm run build && electron-builder",
    "preview": "vite preview",

    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },

  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },

  "devDependencies": {
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "concurrently": "^9.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "typescript": "^5.5.0",
    "vite": "^6.0.0",
    "wait-on": "^8.0.0"
  },

  "build": {
    "appId": "com.hermes.linkedindesktop",
    "productName": "Hermes",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "electron/**"
    ],
    "extraResources": [
      {
        "from": "../backend/target/",
        "to": "backend/"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
